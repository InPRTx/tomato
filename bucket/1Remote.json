{
    "version": "1.0.0",
    "description": "1Remote is a modern personal remote session manager and launcher. It is a single place to manage all your remote sessions supporting number of different protocols.",
    "homepage": "https://github.com/1Remote/1Remote",
    "license": "GPL-3.0-only",
    "architecture": {
        "64bit": {
            "url": "https://github.com/1Remote/1Remote/releases/download/1.0.0/1Remote-1.0.0-net6-x64.zip",
            "hash": "09f62793d8b59eaaa4ae781dc04a2882c46eb50a36a7f567a38f99497fd5eef5"
        }
    },
    "shortcuts": [
        [
            "1Remote.exe",
            "1Remote"
        ]
    ],
    "pre_install": [
        "if (!(Test-Path \"$persist_dir\\1Remote.db\")) { New-Item -Path \"$persist_dir\\1Remote.db\" -Type File | Out-Null }",
        "if (!(Test-Path \"$persist_dir\\1Remote.json\")) { New-Item -Path \"$persist_dir\\1Remote.json\" -Type File | Out-Null }",
        "Set-Content -Path \"$persist_dir\\FORCE_INTO_PORTABLE_MODE\" -Value \"rename to 'FORCE_INTO_APPDATA_MODE' can save to AppData\""
    ],
    "persist": [
        "1Remote.db",
        "1Remote.json",
        ".locality",
        ".logs",
        "Protocols",
        "kitty"
    ],
    "checkver": {
        "url": "https://github.com/1Remote/1Remote/releases.atom",
        "regex": "Repository/\\d+/(.+?)<"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/1Remote/1Remote/releases/download/$version/1Remote-$version-net6-x64.zip"
            }
        }
    }
}